<main class="content">
  <div class="container-fluid p-0">

    <h1 class="h3 mb-3">Application Codes</h1>
    <p style="color: green"><%= notice %></p>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title mb-0">List of Application Codes</h5>
            <%= link_to "New app code", new_app_code_path %>
            <div id="app_codes">
              <table class="table table-hover my-0">
                <thead>
                <tr>
                  <th>Name</th>
                  <th class="d-none d-xl-table-cell">Description</th>
                  <th class="d-none d-xl-table-cell">Manager</th>
                  <th class="d-none d-md-table-cell">Manager Email</th>
                  <th class="d-none d-md-table-cell">Support Email</th>
                </tr>
                </thead>
                <tbody>
                       <%= render @app_code %>
                </tbody>
              </table>
            </div>
<div>
  <%= link_to "Edit this app code", edit_app_code_path(@app_code) %> |
  <%= link_to "Back to app codes", app_codes_path %>

  <%= button_to "Destroy this app code", @app_code, method: :delete, class: "btn btn-lg btn-primary" %>
</div>



        </div>
        <div class="card-body">
        </div>
      </div>
    </div>
  </div>

  </div>
</main>


<% content_for :footer do %>
  <%= render :partial => "layouts/footer" %>
<% end %>

