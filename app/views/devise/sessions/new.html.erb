<main class="d-flex w-100">
  <div class="container d-flex flex-column">
    <div class="row vh-100">
      <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto d-table h-100">
        <div class="d-table-cell align-middle">

          <div class="text-center mt-4">
            <h1 class="h2">Welcome back!</h1>
            <p class="lead">
              Sign in to your account to continue
            </p>
          </div>
          <div class="card">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="card-body">
              <div class="m-sm-3">

                  <div class="mb-3">
                    <%= f.label :email, class: "form-label"%><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder:"Enter your email" %>
                  </div>
                  <div class="mb-3">
                    <%= f.label :password, class: "form-label" %><br />
                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Enter your password" %>
                  </div>
                  <div>
                      <% if devise_mapping.rememberable? %>
                        <div class="form-check align-items-center">
                          <%= f.check_box :remember_me, class: "form-check-input" %>
                          <%= f.label :remember_me, class: "form-check-label text-small", for:"customControlInline" %>
                        </div>
                      <% end %>
                  </div>
                  <div class="d-grid gap-2 mt-3">
                    <%= f.submit "Log in" , class: "btn btn-lg btn-primary"%>
                  </div>

              </div>

            </div>
          </div>
            <% end %>
          <div class="text-center mb-3">
           <!-- Don't have an account? <a href="pages-sign-up.html">Sign up</a> -->
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>